fn<T, G> map(array: &&Array<'T>, f: (&&'T) => 'G) -> Array<'G> {
    let res: Array<'G> = arr<'G>();

    for i in array {
        res.push<'G>(f<'T, 'G>(i));
    }

    return *<Array<'G>>res;
}

fn<T> filter(array: &&Array<'T>, f: (&&'T) => Bool) -> Array<'T> {
    let res: Array<'T> = arr<'T>();

    for i in array {
        if f<&&'T, Bool>(i) {
            res.push<'T>(*<'T>i);
        }
    }

    return *<Array<'T>>res;
}

let a: Array<Int> = arr<Int>();
