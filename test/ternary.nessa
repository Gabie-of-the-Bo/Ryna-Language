syntax ternary_operator from '{' {s} Arg(<expr>, condition) {s} '?' {s} Arg(<expr>, if_true) {s} ':' {s} Arg(<expr>, if_false) {s} '}' {
    {#if } {$condition} {#\{}
        {#return } {$if_true} {#;}
    {#\}}
    
    {#return } {$if_false} {#;}
}

if { 4 > 6 ? 1 + 2 : 1 + 4 } != 5 {
    panic("This should not happen");
}